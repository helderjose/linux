/etc/systemd/system

man systemctl		//details
systemctl --help
systemctl start foo	//Activate a service immediately
systemctl stop foo	//Deactivate a service immediately
systemctl restart foo	//Restart a service
systemctl restart foo	//Restart a service
systemctl status foo	//Show the status of a service including if it is running or not
